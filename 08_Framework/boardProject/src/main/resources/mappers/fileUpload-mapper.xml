<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!--
	Mapper 인터페이스와 연결하는 방법 : 
	namespace 속성 값으로 Mapper 인터페이스의 패키지명 + 인터페이스명 작성
-->
<mapper namespace="edu.kh.project.fileUpload.mapper.FileUploadMapper">

	<!-- 파일 1개 정보 DB에 삽입 -->
	<insert id="fileInsert">
		INSERT INTO "TB_FILE_TEST"
		VALUES(
			SEQ_FILE_NO.NEXTVAL,
			#{fileOriginalName},
			#{fileRename},
			#{filePath},
			DEFAULT
		)
	</insert>
	
	<!-- 파일 목록 조회 -->
	<select id="selectFileList">
		SELECT	FILE_NO, FILE_ORIGINAL_NAME, FILE_RENAME, FILE_PATH,
				TO_CHAR(UPLOAD_DATE, 'YYYY-MM-DD HH24:MI:SS') UPLOAD_DATE
		FROM 	TB_FILE_TEST
	</select>

</mapper>
